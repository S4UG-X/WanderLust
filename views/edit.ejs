<% layout("/layouts/boilerplate") %>
    <div class="container mt-5" style="max-width: 600px">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="mb-4 text-center">Edit <%= listing.title %></h2>
          <form action="/listings/<%= listing._id %>?_method=PATCH" method="POST">
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input
                type="text"
                class="form-control"
                id="title"
                name="listing[title]"
                value="<%= listing.title %>"
                required
              />
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea
                class="form-control"
                id="description"
                name="listing[description]"
                rows="3"
                required
              ><%= listing.description %></textarea>
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Image URL</label>
              <input
                type="text"
                class="form-control"
                id="image"
                name="listing[image][url]"
                value="<%= listing.image.url %>"
              />
            </div>
            <div class="mb-3">
              <label for="price" class="form-label">Price (NPR)</label>
              <input
                type="number"
                class="form-control"
                id="price"
                name="listing[price]"
                value="<%= listing.price %>"
                min="0"
                required
              />
            </div>
            <div class="mb-3 d-flex gap-3">
              <div class="flex-fill">
                <label for="country" class="form-label">Country</label>
                <input
                  type="text"
                  class="form-control"
                  id="country"
                  name="listing[country]"
                  value="<%= listing.country %>"
                  required
                />
              </div>
              <div class="flex-fill">
                <label for="location" class="form-label">Location</label>
                <input
                  type="text"
                  class="form-control"
                  id="location"
                  name="listing[location]"
                  value="<%= listing.location %>"
                  required
                />
              </div>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-block">
                Save Changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

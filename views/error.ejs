<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="card border-danger shadow-sm">
    <div class="card-header bg-danger text-white">
      <h3 class="mb-0"><i class="fa-solid fa-triangle-exclamation"></i> Error</h3>
    </div>
    <div class="card-body">
      <h4 class="card-title"><%= err.status || 500 %> - <%= err.message || "Something went wrong!" %></h4>
      <% if (err.stack) { %>
        <pre class="mt-3 text-muted small"><%= err.stack %></pre>
      <% } %>
      <a href="/listings" class="btn btn-primary mt-4"><i class="fa fa-arrow-left"></i> Back to Listings</a>
    </div>
  </div>
</div>
